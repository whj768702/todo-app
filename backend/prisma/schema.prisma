generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(cuid())
  email    String   @unique
  password String
  todos    Todo[]
  createAt DateTime @default(now())
}

model Todo {
  id       String   @id @default(cuid())
  title    String
  content  String?
  done     Boolean  @default(false)
  user     User     @relation(fields: [userId], references: [id])
  userId   String
  createAt DateTime @default(now())
}
